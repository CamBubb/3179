{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 450,
  "data": {
    "url": "https://raw.githubusercontent.com/CamBubb/3179/main/Data/WorldMapWithGraticules.json",
    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
  },
  "title": "Global Happiness Index",
  "projection": {"type": "equalEarth"},
  "layer": [
    {
      "transform": [
        {
          "calculate": "'Data is not available in ' + datum.properties.NAME",
          "as": "note"
        }
      ],
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"},
      "encoding": {"tooltip": {"field": "note"}}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/CamBubb/3179/main/Data/WorldMapWithGraticules.json",
        "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
      },
      "mark": {"type": "geoshape", "fill": null, "stroke": "lightgray"}
    },
    {
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/CamBubb/3179/main/Data/cleaned_df.csv"
            },
            "key": "Country",
            "fields": ["Happiness score"]
          }
        }
      ],
      "mark": {"type": "geoshape"},
      "encoding": {
        "color": {
          "field": "Happiness score",
          "type": "quantitative",
          "title": ["Happiness Score"],
          "scale": {"scheme": "purplebluegreen"}
        },
        
        "tooltip": [
          {"field": "properties.NAME", "type": "nominal", "title": "Country"},
          {"field": "Happiness score", "type": "quantitative"}
        ]
      }
    }
  ]
}